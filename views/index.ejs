    <body id="beranda">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
            <a class="navbar-brand js-scroll-trigger" href="#beranda">
                <span class="d-block d-lg-none">SI KEMAL</span>
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="assets/img/logo.jpeg" alt="malinau" /></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse mt-5" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="/users/login" class="btn btn-outline-light btn-sm">Halaman Petugas</a></li>
                </ul>
            </div>
        </nav>
        <!-- Page Content-->
        <div class="container-fluid p-0">
            <!-- About-->
            <section class="resume-section" id="home">
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        SI
                        <span class="text-primary">KEMAL</span>
                    </h1>
                    <div class="lead mb-5">
                        Sistem Informasi Keamanan dan Ketertiban Masyarakat Malinau
                    </div>
                    <div class="social-icons">
                        <a class="btn btn-secondary btn-lg" href="#laporan">Bikin Laporan Baru</a>
                        <a class="btn btn-primary btn-lg" style="color: antiquewhite;margin-left: 15px;" href="#ceklaporan">Cek Laporan</a>
                    </div>
                </div>
            </section>
            <hr class="m-0" />
            <!-- laporan-->
            <section class="resume-section" id="laporan">
                <div class="resume-section-content">
                    <a href="#beranda" style="text-decoration:none;"><i class="fa fa-arrow-left" aria-hidden="true"></i> &nbsp;&nbsp;Kembali</a>
                    <h2>Laporan Baru</h2>
                    <span style="color: red;">Laporan tidak dapat diubah maupun dihapus, pastikan laporan anda dibuat dengan sebenarnya.</span>
                    <div class="d-flex flex-column flex-md-row justify-content-between mb-5 mt-3">
                        <div class="flex-grow-1 row">
                            <div class="col-md-12">
                                <form onsubmit="bikinLaporan(event)">
                                    <div class="form-group mb-3">
                                        <div class="col-md-4">
                                            <label>Nama</label>
                                            <input type="text" id="nama" name="nama" class="form-control mb-2" placeholder="Nama" required>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <div class="col-md-4">
                                            <label>No.Telp</label>
                                            <input type="Number" id="tlp" name="tlp" class="form-control" placeholder="No.Telp" required>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label>Alamat</label>
                                        <input type="text" id="alamat" name="alamat" class="form-control" placeholder="Alamat" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label>Laporan</label>
                                        <textarea class="form-control" id="catatan" name="catatan" rows="3" placeholder="Laporan" required></textarea>
                                    </div>
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-secondary">Kirim Laporan</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr class="m-0" />
            <!-- laporan-->
            <section class="resume-section" id="ceklaporan">
                <div class="resume-section-content">
                    <a href="#beranda" style="text-decoration:none;"><i class="fa fa-arrow-left" aria-hidden="true"></i> &nbsp;&nbsp;Kembali</a>
                    <h2 class="mb-5">Cek Laporan</h2>
                    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                        <div class="flex-grow-1">
                            <div class="col-md-12">
                                <form class="mb-5">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group mx-sm-3 mb-2">
                                                <label class="sr-only">No. Laporan</label>
                                                <input type="number" class="form-control" placeholder="Masukan No. Laporan">
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <button type="submit" style="color: antiquewhite;" class="btn btn-primary mb-2">Cek Laporan</button>
                                        </div>
                                    </div>
                                </form>

                                <table class="table table-bordered" style="font-size:small">
                                    <thead>
                                        <tr>
                                            <th width="10%">No. Laporan</th>
                                            <th width="25%">Pelapor</th>
                                            <th width="25%">Laporan</th>
                                            <th width="25%">Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th>#00098765</th>
                                            <td>
                                                Hendra Setiawan<br>
                                                0821111223<br>
                                                jln. Mulawarman Rt.10 No.25
                                            </td>
                                            <td>Terjadi keributan antar warga Rt.10 dengan Rt.11, kronologi salah satu warga Rt.11 gak terima anaknya dislepet kepalanya oleh pelaku warga Rt.10, sekian terima kasih</td>
                                            <td>
                                                <small>- Laporan Masuk (6-2-2024 11:45)</small>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <hr class="m-0" />v
        </div>
        <!-- REST API-->
        <script>
            async function bikinLaporan(event) {
                
                event.preventDefault();
                const nama = document.getElementById('nama').value;
                const tlp = document.getElementById('tlp').value;
                const alamat = document.getElementById('alamat').value;
                const laporan = document.getElementById('catatan').value;
                
                try {
                    const response = await fetch('/laporan/create', {
                        method : 'POST',
                        headers : {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({nama, tlp, alamat, laporan})
                    });

                    const result = await response.json();

                    if (result.status === 'success') {
                        alert(result.message);
                        window.location.href = '/';
                    } else {
                        alert(result.message);
                    }


                } catch (error) {
                    console.log(error);
                }
                
            }

        </script>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
    </body>
</html>